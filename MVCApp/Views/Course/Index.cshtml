@{
    ViewData["Title"] = "Index";
}

@model List<Course>

<div class="container-fluid mt-3 px-3">


    <div class="row justify-content-end">

        <div class="col-5 mt-2">
            <!-- Form üzerinden querystring ile arama yapmak için form method get kullandık-->
            <form method="get" asp-controller="Course" asp-action="Index">
                <div class="input-group">
                    <input class="form-control" name="aranan" value="@ViewBag.Aranan" placeholder="arama yapınız" />
                    <div class="input-group-addon">
                        <button class="btn btn-default" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-2 mt-2">
            <a class="btn btn-primary" asp-controller="Course" asp-action="Index">
                Temizle
            </a>
        </div>


        <div class="col-3 mt-2">
            <form method="get" asp-controller="Course" asp-action="Index">

                <!-- Bir önceki viewbag değerlerini sıralamada kaybetmemek için hidden input ile aranan ve sayfa viewbag değerlerini gönderdik-->
                <input type="hidden" name="aranan" value="@ViewBag.Aranan" />
                <input type="hidden" name="sayfa" value="@ViewBag.Sayfa" />


                <select class="form-select" aria-label="Default select example" name="fiyatSiralama" onchange="this.form.submit()">
                    <option selected>Fiyata Göre Sırala</option>
                    <option value="asc">Fiyata göre azalandan artana</option>
                    <option value="desc">Fiyata göre artandan azalana</option>
                </select>

                @* @Html.DropDownList("fiyatSiralama",new List<SelectListItem>{ new SelectListItem{ Text = "A-Z", Value = "Asc"}, new SelectListItem { Text = "Z-A", Value= "Desc"}},"Fiyata Göre Sırala",  new { onchange="this.form.submit();"})*@

            </form>
        </div>

        <div class="col-2 mt-2 text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Yeni Kayıt
            </a>
        </div>
    </div>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th class="bg-black text-white">
                    Kurs Adı
                </th>
                <th class="bg-black text-white">
                    Açıklama
                </th>
                <th class="bg-black text-white">
                    Fiyat
                </th>
                <th class="bg-black text-white">
                    Toplam Saat
                </th>
                <th class="bg-black text-white">
                    Başlangıç / Bitiş
                </th>
                <th class="bg-black text-white">
                    Eğitmen
                </th>
                <th class="bg-black text-white">
                    İşlemler
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Content</td>
                    <td>@item.Price ₺</td>
                    <td>@item.TotalHours</td>
                    <td>@item.StartDate.Value.ToShortDateString() / @item.EndDate.Value.ToShortDateString()</td>
                    <td>@item.CourseTeacher?.Name @item.CourseTeacher?.SurName</td>
                    <td>
                        <a asp-controller="Course" asp-action="AssingTeacherToCourse" asp-route-id="@item.Id" class="btn btn-warning">Eğitmen Atama Yap</a>
                        <a asp-controller="Course" asp-action="Students" class="btn btn-primary">Kursiyerler</a>
                        <a asp-controller="Course" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Düzenle</a>
                        <a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination">

            <li class="page-item">
                <a class="page-link" asp-controller="Course" asp-action="Index" asp-route-sayfa="@ViewBag.OncekiSayfa" asp-route-aranan="@ViewBag.Aranan" asp-route-fiyatSiralama="@ViewBag.FiyatSiralama">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.SayfaSayisi; i++)
            {
                //Aynı sayfayı farklı değerlere göre açmayı istiyorsak    queryString kullanırız.
            //Sayfaya parametre gönderme yöntemi
                //Course/Index?sayfa=1&aranan=mvc&sira=a-z
                //Course/Index?sayfa=1
                //Querystring url üzerinden veri filtreleme yöntemi
                <li class="page-item">
                    <a class="page-link" asp-controller="Course" asp-action="Index" asp-route-sayfa="@i" asp-route-aranan="@ViewBag.Aranan" asp-route-fiyatSiralama="@ViewBag.FiyatSiralama">@i</a>
                </li>
            }

            <li class="page-item">
                <a class="page-link" asp-controller="Course" asp-action="Index" asp-route-sayfa="@ViewBag.SonrakiSayfa" asp-route-aranan="@ViewBag.Aranan" asp-route-fiyatSiralama="@ViewBag.FiyatSiralama">Next</a>
            </li>

        </ul>
    </nav>
</div>
